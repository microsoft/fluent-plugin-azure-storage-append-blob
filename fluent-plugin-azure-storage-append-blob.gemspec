  spec.name    = "fluent-plugin-azure-storage-append-blob"
  spec.version = "0.1.0"
  spec.authors = ["Microsoft"]
  spec.email   = [""]

  spec.summary       = "Azure Storage Append Blob output plugin for Fluentd event collector"
  spec.description   = spec.summary
